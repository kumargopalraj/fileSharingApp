<div class="photo_form">
<div class="form-group">
  <%= f.label :tagline, :class => 'control-label col-lg-2' %>
  <%= f.hidden_field :user_id, value: current_user.id%>
  <div class="col-lg-4">
    <%= f.text_field :tagline, autofocus: true, :class => 'form-control' %>
  </div>
  <%= f.error_span(:tagline) %>
</div>
<div class="form-group">
  <%= f.label :image, :class => 'control-label col-lg-2' %>
  <div class="col-lg-4">
    <%= f.file_field :image, autofocus: true, :class => 'form-control' %>
  </div>
  <%= f.error_span(:image) %>
</div>
<%= f.hidden_field :_destroy, as: :hidden %>
<%= link_to 'Delete', '#', class: 'remove_record' %>
</div>



